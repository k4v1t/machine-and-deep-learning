{
  // Stop LaTeX Workshop from running any linting (incl. ChkTeX)
  "latex-workshop.linting.enabled": false,
  "latex-workshop.linting.chktex.enabled": false,

  // Stop TexLab from invoking ChkTeX
  "texlab.chktex.enabled": false,

  // (Optional) keep LaTeX aux files in a subfolder when building
  "latex-workshop.latex.outDir": "./tex"
}
